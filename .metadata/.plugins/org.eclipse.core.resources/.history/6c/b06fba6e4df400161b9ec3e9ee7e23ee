package Command;


import Request.FtpRequest;

public class CommandPwd extends Command{
	public CommandPwd(FtpRequest ftp) {
		super(ftp);
		
	}
	
	@Override
	public boolean process(String arg){
		getAnswer().setSpecificMessage(ftp.getCurrentDirectory().toString().substring(ftp.getHomeDirectory().toString().lastIndexOf("/"))); 
		send(getAnswer().getAnswers().get(257));
		return true;
	}
}
