package Command;

import Request.FtpRequest;

public class CommandQuit extends Command{

	public CommandQuit(FtpRequest ftp) {
		super(ftp);
	}
	
	@Override
	public boolean process(String arg){
		super.send(221, "Deconnexion");
		try{
			//ftp.getIn().close();
			//ftp.getOut().close();
			ftp.getSocket().close();
			ftp.send(221, "Connection closed");
			return true;		
		}catch(Exception e){
			e.printStackTrace();
			return false;
		}
	}

}
