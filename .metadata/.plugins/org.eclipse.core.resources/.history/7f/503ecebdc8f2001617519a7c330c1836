package Command;

import java.io.File;

import Request.FtpRequest;

public class CommandPwd extends Command{
	public CommandPwd(FtpRequest ftp) {
		super(ftp);
		process();
	}
	
	public void process(){;
		System.out.println(ftp.getCurrentDirectory().toString().substring(ftp.getHomeDirectory().toString().length()));
		ftp.send(257, ftp.getCurrentDirectory().toString().substring(ftp.getHomeDirectory().toString().length()));
	}
}
