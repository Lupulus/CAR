import actor.NodeActor;
import akka.actor.ActorRef;
import akka.actor.ActorSelection;
import akka.actor.ActorSystem;
import akka.actor.Props;


public class Main {

	public static void main(String args[]){
		ActorSystem system1 = ActorSystem.create("truc drole");
		ActorSystem system2 = ActorSystem.create("autre truc");
		
		
		ActorRef sender1 = system1.actorOf( Props.create(NodeActor.class), "sender1" );
	        
		ActorSelection greeter1 = system1.actorSelection("akka.tcp://MySystem1@127.0.0.1:2552/user/greeter1");
		    
	} 
}	
